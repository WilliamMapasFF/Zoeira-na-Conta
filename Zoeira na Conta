    function calcular() {
      const n1 = parseFloat(document.getElementById("num1").value);
      const n2 = parseFloat(document.getElementById("num2").value);
      const op = document.getElementById("op").value;
      const resDiv = document.getElementById("resultado");
      let res = 0;
      let mensagem = "";

      resDiv.classList.remove("tremor");

      if (isNaN(n1) || isNaN(n2)) {
        mensagem = "ü§¨ " + xingamentos[Math.floor(Math.random() * xingamentos.length)];
        resDiv.classList.add("tremor");
      } else if (op === "/" && n2 === 0) {
        mensagem = "üò° " + xingamentos[Math.floor(Math.random() * xingamentos.length)];
        resDiv.classList.add("tremor");
      } else {
        switch (op) {
          case "+": res = n1 + n2; break;
          case "-": res = n1 - n2; break;
          case "*": res = n1 * n2; break;
          case "/": res = n1 / n2; break;
        }

        if (res === 69) mensagem = "üòè 69... safado safadinho";
        else if (res === 420) mensagem = "üåø 420... t√° em outra vibe a√≠ n√©?";
        else if (res === 666) mensagem = "üòà 666... a besta despertou!";
        else if (res === 13) mensagem = "üßø 13... vai tomar banho de sal grosso!";
        else mensagem = `‚úÖ Resultado: ${res}`;
      }

      resDiv.textContent = mensagem;
    }
